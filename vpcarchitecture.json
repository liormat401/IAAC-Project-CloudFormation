{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "A template for learning CloudFormation",
    "Metadata": {
      "Author": "Lior Matana"
    },
    "Resources": {
      "DemoVPC": {
        "Type": "AWS::EC2::VPC",
        "Properties": {
          "CidrBlock": "192.168.0.0/16"
        }
      },
      "PublicSub": {
        "Type": "AWS::EC2::Subnet",
        "Properties": {
          "AvailabilityZone": "us-west-2a",
          "CidrBlock": "192.168.1.0/24",
          "VpcId": {
            "Ref": "DemoVPC"
          }
        }
      },
      "PrivateSub1":{
        "Type":"AWS::EC2::Subnet",
        "Properties":{
            "AvailabilityZone":"us-west-2a",
            "CidrBlock":"192.168.2.0/24",
            "VpcId":{
                "Ref":"DemoVPC"
            }
        }
      },
      "PrivateSub2":{
        "Type":"AWS::EC2::Subnet",
        "Properties":{
            "AvailabilityZone":"us-west-2a",
            "CidrBlock":"192.168.3.0/24",
            "VpcId":{
                "Ref":"DemoVPC"
            }
        }
      },
      "PrivateSub3":{
        "Type":"AWS::EC2::Subnet",
        "Properties":{
            "AvailabilityZone":"us-west-2b",
            "CidrBlock":"192.168.4.0/24",
            "VpcId":{
                "Ref":"DemoVPC"
            }
        }
      }
    }
  }
  